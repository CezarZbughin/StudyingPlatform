<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" prefHeight="501.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.StudyingPlatform.controllers.ChatController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="501.0" prefWidth="180.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="45.0" prefWidth="133.0" text="Inbox">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="343.0" prefWidth="180.0">
               <children>
                  <ScrollPane prefHeight="343.0" prefWidth="169.0">
                     <content>
                        <VBox fx:id="groupsVBox" />
                     </content>
                  </ScrollPane>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="55.0" prefWidth="180.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onCreateButtonClick" prefHeight="40.0" prefWidth="154.0" style="-fx-pref-height: 40;" text="Create Group">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="55.0" prefWidth="180.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onBackButtonClick" prefHeight="40.0" prefWidth="154.0" style="-fx-pref-height: 40;" text="Back">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox prefHeight="501.0" prefWidth="370.0">
         <children>
            <Label fx:id="groupName" alignment="CENTER" prefHeight="44.0" prefWidth="322.0" />
            <HBox alignment="CENTER" prefHeight="366.0" prefWidth="370.0">
               <children>
                  <ScrollPane fx:id="messageScroll" prefHeight="366.0" prefWidth="350.0" style="-fx-background-color: #E8E8E8;">
                     <content>
                        <VBox fx:id="messageVBox" style="-fx-background-color: #E8E8E8;" />
                     </content>
                  </ScrollPane>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="62.0" prefWidth="370.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="62.0" prefWidth="289.0">
                     <children>
                        <TextField fx:id="messageTextField" prefHeight="40.0" prefWidth="293.0" style="-fx-pref-height: 40;" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="62.0" prefWidth="49.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onSendButtonClick" prefHeight="46.0" prefWidth="45.0" style="-fx-pref-height: 40;" text="Send" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
